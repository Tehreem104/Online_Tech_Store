                        <form action="../../Home/Sign_In" class="sign__form" method="get">
                            <a href="https://dmitryvolkov.me/demo/flixgo2.0/main/index.html" class="sign__logo">
                                <img src="./sign_up_files/logo.svg" alt="">
                            </a>
