    <script type="text/javascript">
        function CheckPassWordLength() {

            var password = document.getElementById("pass11").value;


            if (password.length < 6)
                alert("Your Password is Too Small");

            var inputtext = document.getElementById("email11").value;
            var inputtext1 = document.getElementById("name11").value;

            if (inputtext == "" || inputtext1 == "") {
                alert("PLEASE FILL ALL BOXES");

            }


        }
